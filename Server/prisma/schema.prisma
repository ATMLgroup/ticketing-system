generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customers {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  createdAt   DateTime  @default(now())
  firstName   String
  lastName    String
  phoneNumber String
  Tickets     Tickets[]
}

enum Ticket_Priority_Options {
  High
  Medium
  Low
}

model Tickets {
  id          Int                     @id @default(autoincrement())
  title       String
  priority    Ticket_Priority_Options
  description String
  author      Customers               @relation(fields: [customersId], references: [id])
  customersId Int
}
